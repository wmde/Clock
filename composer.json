{
	"name": "wmde/clock",
	"license": "BSD-3-Clause",
	"description": "Simple interface to get the current time without binding to global system resources",
	"require": {
		"php": ">=5.6"
	},
	"require-dev": {
		"phpunit/phpunit": "~7.1",
		"ockcyp/covers-validator": "~1.0",
		"squizlabs/php_codesniffer": "~3.2",
		"slevomat/coding-standard": "~4.5",
		"mediawiki/mediawiki-codesniffer": "~18.0",
		"phpstan/phpstan": "~0.9.2"
	},
	"autoload": {
		"psr-4": {
			"WMDE\\Clock\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"WMDE\\Clock\\Tests\\": "tests/"
		}
	},
	"extra": {
		"branch-alias": {
			"dev-master": "0.1.x-dev"
		}
	}
}
