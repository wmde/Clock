{
	"name": "wmde/clock",
	"license": "BSD-3-Clause",
	"description": "Simple interface to get the current time without binding to global system resources. Includes test doubles!",
	"require": {
		"php": ">=8.4"
	},
	"require-dev": {
		"phpunit/phpunit": "~12.1",
		"wmde/fundraising-phpcs": "~12.0",
		"phpstan/phpstan": "~2.1"
	},
	"repositories": [
		{
			"type": "vcs",
			"url": "https://github.com/wmde/fundraising-phpcs",
			"no-api": true
		}
	],
	"autoload": {
		"psr-4": {
			"WMDE\\Clock\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"WMDE\\Clock\\Tests\\": "tests/"
		}
	},
	"extra": {
		"branch-alias": {
			"dev-master": "2.0.x-dev"
		}
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
